{% extends 'base.html.twig' %}

{% block body %}
    <h1>Claim</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ claim.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ claim.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ claim.type }}</td>
            </tr>
            <tr>
                <th>Answered</th>
                <td>{% if claim.answered %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('claime_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('claime_edit', { 'id': claim.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
