{% extends 'layoutPages.html.twig' %}
{% block header %}
    {{ parent() }}
{% endblock %}

{% block content %}
    {% block title %}
        <title>Bakery | Event</title>
    {% endblock %}
    <!--section-->
    <div class="ps-section--hero"><img src="{{ asset('assets/front/images/hero/01.jpg') }}" alt="">
        <div class="ps-section__content text-center">
            <h3 class="ps-section__title">OUR BAKERY</h3>
            <div class="ps-breadcrumb">
                <ol class="breadcrumb">
                    <li><a href="{{ path('_cupcakes_homepage') }}">Home</a></li>
                    <li class="active">Event</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="ps-section--cart pt-100 pb-100">
        <div class="container">
            <h3>Event list</h3>
            <div class="table-responsive">
                <table class="table" id="table">
                    <thead>
                    <tr>
                        <th>Starting date</th>
                        <th>Ending date</th>
                        <th>Number of person</th>
                        <th>Number of place</th>
                        <th>Band</th>
                        <th>Cost</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for event in events %}
                        <tr id="addr{{ event.id }}">
                            <td>{% if event.StartDatetime %}{{ event.StartDatetime|date('Y-m-d') }}{% endif %}</td>
                            <td>{% if event.EndDatetime %}{{ event.EndDatetime|date('Y-m-d') }}{% endif %}</td>
                            <td>{{ event.nbPerson }}</td>
                            <td>{{ event.nbTable }}</td>
                            <td>{% if event.band %}Yes{% else %}No{% endif %}</td>
                            <td>{{ event.cost }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a id="" class="glyphicon glyphicon-trash" onclick="delete_entry({{ event.id }})"> </a>
                                    </li>
                                    <li>
                                        <a class="glyphicon glyphicon-ok-circle" onclick="validate_row(id)"></a>
                                    </li>
                                </ul>
                            </td>



                        </tr>
                    {% endfor %}
                    </tbody>

                </table>

            </div>
            <div class="form-group text-left">
                <button id="add_row" class="ps-btn">New Event<i class="fa fa-angle-right"></i></button>
            </div>
        </div>

        <center>
            <div class="navigation">
                {{ knp_pagination_render(events) }}
            </div>
        </center>
    </div>

{% endblock %}

{% block footer %}
    {{ parent() }}

{% endblock %}

{% block jsLibrary %}
    {{ parent() }}

{% endblock %}

{% block slider %}
    {{ parent() }}

{% endblock %}

{% block CustomScripts %}
    {{ parent() }}
{% endblock %}