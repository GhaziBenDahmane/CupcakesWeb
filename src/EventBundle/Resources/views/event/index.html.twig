{% extends 'layoutPages.html.twig' %}
{% block header %}
    {{ parent() }}
{% endblock %}

{% block content %}
    {% block title %}
        <title>Bakery | Cart</title>
    {% endblock %}
    <!--section-->
    <div class="ps-section--hero"><img src="{{ asset('assets/front/images/hero/01.jpg') }}" alt="">
        <div class="ps-section__content text-center">
            <h3 class="ps-section__title">OUR BAKERY</h3>
            <div class="ps-breadcrumb">
                <ol class="breadcrumb">
                    <li><a href="{{ path('_cupcakes_homepage') }}">Home</a></li>
                    <li class="active">Cart</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="ps-section--cart pt-100 pb-100">
        <div class="container">
            <div class="table-responsive">

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Starting date</th>
                    <th>Endingd ate</th>
                    <th>Number of person</th>
                    <th>Nbtable</th>
                    <th>Band</th>
                    <th>Cost</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for event in events %}
                    <tr>
                        <td><a href="{{ path('event_show', { 'id': event.id }) }}">{{ event.id }}</a></td>
                        <td>{% if event.startingDate %}{{ event.startingDate|date('Y-m-d') }}{% endif %}</td>
                        <td>{% if event.endingDate %}{{ event.endingDate|date('Y-m-d') }}{% endif %}</td>
                        <td>{{ event.nbPerson }}</td>
                        <td>{{ event.nbTable }}</td>
                        <td>{% if event.band %}Yes{% else %}No{% endif %}</td>
                        <td>{{ event.cost }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('event_show', { 'id': event.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('event_edit', { 'id': event.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
                </div >


                <ul>
                <li>
                    <a href="{{ path('event_new') }}">Create a new event</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block footer %}
    {{ parent() }}

{% endblock %}

{% block jsLibrary %}
    {{ parent() }}

{% endblock %}

{% block slider %}
    {{ parent() }}

{% endblock %}

{% block CustomScripts %}
    {{ parent() }}
{% endblock  %}