{% extends 'layoutPages.html.twig' %}
{% block header %}
    {{ parent() }}
{% endblock %}

{% block content %}
    {% block title %}
        <title>Bakery | Reservation</title>
    {% endblock %}
    <!--section-->
    <div class="ps-section--hero"><img src="{{ asset('assets/front/images/hero/01.jpg') }}" alt="">
        <div class="ps-section__content text-center">
            <h3 class="ps-section__title">OUR BAKERY</h3>
            <div class="ps-breadcrumb">
                <ol class="breadcrumb">
                    <li><a href="{{ path('_cupcakes_homepage') }}">Home</a></li>
                    <li class="active">Cart</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="ps-section--cart pt-100 pb-100">
        <div class="container">

            <h1>Reservations list</h1>

            <div class="table-responsive">

                <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Datereservation</th>
                    <th>Nbtable</th>
                    <th>Nbperson</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td><a href="{{ path('reservation_show', { 'id': reservation.id }) }}">{{ reservation.id }}</a></td>
                        <td>{% if reservation.dateReservation %}{{ reservation.dateReservation|date('Y-m-d') }}{% endif %}</td>
                        <td>{{ reservation.nbTable }}</td>
                        <td>{{ reservation.nbPerson }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('reservation_show', { 'id': reservation.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('reservation_edit', { 'id': reservation.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            </div>
            <ul>
                <li>
                    <a href="{{ path('reservation_new') }}">Create a new reservation</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block footer %}
    {{ parent() }}

{% endblock %}

{% block jsLibrary %}
    {{ parent() }}

{% endblock %}

{% block slider %}
    {{ parent() }}

{% endblock %}

{% block CustomScripts %}
    {{ parent() }}
{% endblock  %}