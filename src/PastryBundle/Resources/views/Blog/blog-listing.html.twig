{% extends 'layoutPages.html.twig' %}
{% block header %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <title>Bakery | Blog Listing</title>
    <div class="ps-section--hero"><img src="{{ asset('assets/front/images/hero/01.jpg') }}" alt="">
        <div class="ps-section__content text-center">
            <h3 class="ps-section__title">OUR BAKERY</h3>
            <div class="ps-breadcrumb">
                <ol class="breadcrumb">
                    <li><a href="{{ path('_cupcakes_homepage') }}">Home</a></li>
                    <li class="active">Blog Listing</li>
                </ol>
            </div>
        </div>
    </div>
<div class="page-wrap">
    <div class="ps-section--page-reverse">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12 ">
                    <div class="pt-80 pb-80">
                        {% for actuality in actualities %}
                            <div class="ps-blog-listing">
                                <div class="ps-post">
                                    <div class="ps-post__thumbnail">
                                        <a class="ps-post__overlay" href="blog-detail.html.twig"></a><img
                                                src="{{ actuality.photo }}" alt="">
                                    </div>
                                    <div class="ps-post__header"><a class="ps-post__title"
                                                                    href="/blog-detail/{{ actuality.id }}">{{ actuality.title }}</a>
                                        <div class="ps-post__meta"><span><i
                                                        class="fa fa-calendar-check-o"></i>{{ actuality.date|date }}</span><span
                                                    class="tags"><i class="fa fa-tags"></i><a href="blog-listing.html">cake</a><a
                                                        href="blog-listing.html">good</a><a href="blog-listing.html">chocolate</a></span>
                                        </div>
                                    </div>
                                    <div class="ps-post__content">
                                        <p>{{ actuality.content }}</p>
                                    </div>
                                    <footer class="ps-post__footer"><a class="ps-btn ps-btn--sm ps-post__morelink"
                                                                       href="/blog-detail/{{ actuality.id }}">Read
                                            more</a>
                                        <br>

                                        <div class="ps-section__top">Like & Share</div>
                                        <br{{ socialButtons() }}
                                    </footer>
                                </div>
                            </div>
                        {% endfor %}

{#                        <div class="ps-pagination">
                            <ul class="pagination">
                                <li><a href="#"><i class="fa fa-arrow-left"></i></a></li>
                                <li class="active"><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#"><i class="fa fa-arrow-right"></i></a></li>
                            </ul>
                        </div>#}
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 ">
                    <div class="ps-sidebar">
                        <aside class="ps-widget ps-widget--sidebar ps-widget--search">
                            <form method="post" action="search-result.html">
                                <input class="form-control" type="text" placeholder="Type here bakery name...">
                                <button type="submit"><i class="ps-icon--search"></i></button>
                            </form>
                        </aside>
                        <aside class="ps-widget ps-widget--sidebar ps-widget--category">
                            <div class="ps-widget__header">
                                <h3 class="ps-widget__title">Category</h3>
                            </div>
                            <div class="ps-widget__content">
                                <ul class="ps-list--arrow">
                                    <li class="current"><a href="{{ path('_cupcakes_product-listing') }}"><span
                                                    class="circle"></span>All bakery (321)</a></li>
                                    <li><a href="{{ path('_cupcakes_product-listing') }}"><span class="circle"></span>Amazin’
                                            Glazin’</a></li>
                                    <li><a href="{{ path('_cupcakes_product-listing') }}"><span class="circle"></span>The
                                            Crusty Croissant</a></li>
                                    <li><a href="{{ path('_cupcakes_product-listing') }}"><span class="circle"></span>The
                                            Rolling Pin</a></li>
                                    <li><a href="{{ path('_cupcakes_product-listing') }}"><span class="circle"></span>Skippity
                                            Scones</a></li>
                                    <li><a href="{{ path('_cupcakes_product-listing') }}"><span class="circle"></span>Mad
                                            Batter</a></li>
                                    <li><a href="{{ path('_cupcakes_product-listing') }}"><span class="circle"></span>Confection
                                            Connection</a></li>
                                </ul>
                            </div>
                        </aside>
                        <aside class="ps-widget ps-widget--sidebar ps-widget--ads">
                            <div class="ps-widget__header">
                                <h3 class="ps-widget__title">Ads Banner</h3>
                            </div>
                            <div class="ps-widget__content"><img
                                        src="{{ asset('assets/front/images/widget/banner2x.png') }}" alt=""></div>
                        </aside>

                        <aside class="ps-widget ps-widget--sidebar ps-widget--recent-post">
                            <div class="ps-widget__header">
                                <h3 class="ps-widget__title">Recent Post</h3>
                            </div>
                            {% for actuality in actualities %}
                                <div class="ps-widget__content">
                                    <div class="ps-post ps-post--sidebar">
                                        <div class="ps-post__thumbnail">
                                            <a class="ps-post__overlay"  href="/blog-detail/{{ actuality.id }}"></a><img
                                                    src="{{ actuality.photo }}" alt="">
                                        </div>
                                        <div class="ps-post__content"><a  href="/blog-detail/{{ actuality.id }}" data-number-line="2">
                                                {{ actuality.title }}</a><span>{{ actuality.date|date }}</span>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </aside>
                        <aside class="ps-widget ps-widget--sidebar ps-widget--tags">
                            <div class="ps-widget__header">
                                <h3 class="ps-widget__title">TAGS</h3>
                            </div>
                            <div class="ps-widget__content">
                                <ul class="ps-tags">
                                    <li><a href="#">Cupcake</a></li>
                                    <li><a href="#">vanila</a></li>
                                    <li><a href="#">sugar flower</a></li>
                                    <li><a href="#">vanila</a></li>
                                    <li><a href="#">coconut</a></li>
                                    <li><a href="#">vanila</a></li>
                                </ul>
                            </div>
                        </aside>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% endblock %}

    {% block footer %}
        {{ parent() }}

    {% endblock %}

    {% block jsLibrary %}
        {{ parent() }}

    {% endblock %}

    {% block slider %}
        {{ parent() }}

    {% endblock %}

    {% block CustomScripts %}
{{ parent() }}{% endblock %}