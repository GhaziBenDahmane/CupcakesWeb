{% extends 'layoutPages.html.twig' %}
{% block header %}
    {{ parent() }}
{% endblock %}

{% block content %}
    {% block title %}
        <title>Bakery | Cart</title>
    {% endblock %}
    <!--section-->
    <div class="ps-section--hero"><img src="{{ asset('assets/front/images/hero/01.jpg') }}" alt="">
        <div class="ps-section__content text-center">
            <h3 class="ps-section__title">OUR BAKERY</h3>
            <div class="ps-breadcrumb">
                <ol class="breadcrumb">
                    <li><a href="{{ path('_cupcakes_homepage') }}">Home</a></li>
                    <li class="active">Cart</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="ps-section--cart pt-100 pb-100">
        <div class="container">
            <div class="ps-cart-listing">
                <p class="hidden-lg"><i>Slide right to view</i></p>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>All Products</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>

                        <tr id="a">
                            <td>
                                <div class="ps-product--cart"><img src="{{ asset('assets/front/images/cake/img-cake-7.jpg') }}" alt=""><a href="{{ path('_cupcakes_product-detail') }}">{{ products.name }}</a></div>
                            </td>
                            <td>{{ products.price }}</td>
                            <td>
                                <div class="form-group--number">
                                    <button class="minus"><span>-</span></button>
                                    <input class="form-control" type="text" value="1">
                                    <button class="plus"><span>+</span></button>
                                </div>
                            </td>
                            <td><span class="total-row">{{ products.price }}</span></td>
                            <td>
                                <div id="remove" class="ps-cart-listing__remove"></div>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="ps-cart__process">
                    <div class="row">
                        <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12 ">
                            <div class="form-group form-group--icon ps-cart__promotion">
                                <div class="icon-wrap"><i class="fa fa-angle-right"></i>
                                    <input class="form-control" type="text" placeholder="promotion code">
                                </div>
                            </div>
                            <div class="form-groupform-order">
                                <button class="ps-cart__shopping">Continue Shopping</button>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 ">
                            <div class="ps-cart__total">
                                <p>Total Price: <span id="total">{{ products.price }}</span></p>
                                <button class="ps-btn ps-btn--sm ps-btn--fullwidth">Process to checkout</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="{{ asset('jquery.js') }}"></script>
    <script type="text/javascript" src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script type="text/javascript">
        $("#remove").click(function(){

            axios.post("{{path('_cupcakes_cart',{id:products.id})}}", {

                ajax : "true"
            })
                    .then(function (response) {


                        $("#a").hide();
                        $("#total").html(0);




                    })
                    .catch(function (error) {
                        console.log(error);
                    }); });

    </script>
{% endblock %}

{% block footer %}
    {{ parent() }}

{% endblock %}

{% block jsLibrary %}
    {{ parent() }}

{% endblock %}

{% block slider %}
    {{ parent() }}

{% endblock %}

{% block CustomScripts %}
    {{ parent() }}
{% endblock  %}