{% extends 'layoutPages.html.twig' %}
{% block header %}
    {{ parent() }}
{% endblock %}

{% block content %}
    {% block title %}
        <title>Bakery | Order Form</title>
    {% endblock %}
    <!-- Heros-->
    <div class="ps-section--hero"><img src="{{ asset('assets/front/images/hero/02.jpg') }}" alt="">
        <div class="ps-section__content text-center">
            <h3 class="ps-section__title">Red sugar flower</h3>
            <div class="ps-breadcrumb">
                <ol class="breadcrumb">
                    <li><a href="{{ path('_cupcakes_homepage') }}">Home</a></li>
                    <li><a href="{{ path('_cupcakes_product-grid') }}">Shop</a></li>
                    <li class="active">Red sugar flower</li>
                </ol>
            </div>
        </div>
    </div>

    <div class="ps-section ps-section--order-form pt-80 pb-80">
        <div class="container">
            <div class="ps-section__header text-center mb-50">
                <div class="ps-section__top">Making People Happy</div>
                <h3 class="ps-section__title ps-section__title--full">OFFER FORM</h3>
            </div>
            <div class="ps-section__content">

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                            <div class="form-group">
                                <label>Your Name <span>*</span></label>
                                <input id="Dname" class="form-control" type="text" placeholder="">
                            </div>
                            <div class="form-group">
                                <label>Your Adress <span>*</span></label>
                                <input id="Daddress" class="form-control" type="text" placeholder="">
                            </div>




                        </div>
                        <div id="test"></div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">

                            <div class="form-group form-group--icon">

                                <div class="icon-wrap"><i class="fa fa-calendar-check-o"></i>
                                    <label >Choose the date you want order bakery<span>*</span></label>
                                    <input id="Ddatedelivery" class="form-control" type="date" placeholder="">
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Choose the delivery type <span>*</span></label>
                                <select id="Dtype" class="form-control" type="text">
                                    <option value="Free">Free</option>
                                    <option id="prem" value="Premium">Premium</option>
                                </select>
                                <div id="Stype"><p style="color: #830C0C"></p></div>
                            </div>

                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                            <div class="form-group mb-20">
                                <label>Notes about your order, e.g. special notes for delivery.</label>
                                <textarea id="Dnotes" class="form-control" rows="6"></textarea>
                            </div>

                            <div class="form-group text-center">

                                <button id="DSubmit" class="ps-btn">Order Bakery Now<i class="fa fa-angle-right"></i></button>

                            </div>
                        </div>
                    </div>

            </div>
        </div>
    </div>


{% endblock %}

{% block footer %}
    {{ parent() }}

{% endblock %}

{% block jsLibrary %}
    {{ parent() }}

{% endblock %}

{% block slider %}
    {{ parent() }}

{% endblock %}

{% block CustomScripts %}
    {{ parent() }}

{% endblock  %}
