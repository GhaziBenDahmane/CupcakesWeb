{% extends '::base.html.twig' %}

{% block body -%}

    <button class="btn btn-social btn-success" data-toggle="modal" data-target="#add_new_record_modal"><i class="fa fa-plus">  </i></button>
    <div class="modal fade" id="add_new_record_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        {{ form_start(form) }}

        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span> </button>
                    <h4 class="modal-title" id="myModalLabel">Add Promotion</h4>
                </div>

                <div class="modal-body">

                    <div class="form-group">
                        <label for="name">Discount</label>
                        {{ form_widget(form.discount,{'attr':{'class':'form-control'}} ) }}

                    </div>

                    <div class="form-group">
                        <label for="type">Starting date</label>
                        {{ form_widget(form.startingDate,{'attr':{'class':'form-control'}} ) }}
                    </div>

                    <div class="form-group">
                        <label for="photo"> Ending Date</label>
                        {{ form_widget(form.endingDate,{'attr':{'class':'form-control'}} ) }}
                    </div>
                    <div id="test"></div>

                </div>

                <div class="modal-footer">
                    <table border="0" align="right"><tr>

                            <td>
                                {{ form_row(form.submit,{'attr':{'class':'btn btn-primary'}}) }}

                            </td>
                            <td>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
