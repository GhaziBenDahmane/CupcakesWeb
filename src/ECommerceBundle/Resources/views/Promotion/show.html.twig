{% extends 'layoutAdmin.html.twig' %}
{% block header %}
    {{ parent() }}
{% endblock %}
{% block menu %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <h1></h1>

    <div class="panel panel-white">
    <div class="panel-heading clearfix">
        <h4 class="panel-title">Actuality</h4>
    </div>
    <div class="panel-body">
    <div class="table-responsive">
    <table class="table">
    <thead>
    <tr>
        <th>#</th>
        <th>Discount</th>
        <th>Staring date</th>
        <th>Ending Date</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ promotions.discount }}</td>
            <td>{{ promotions.startingDate }}</td>
            <td>{{ promotions.endingDate }}</td>

        </tr>

        </tbody>
        </table>


        <ul>
        <li>
            <a href="{{ path('_promotion_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('_promotion_edit', { 'id':promotions.id }) }}">Edit</a>
        </li>
    <li>
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete" class="btn btn-danger">
        {{ form_end(delete_form) }}
    </li>
    </ul>
    </div>
    </div>
    </div>
{% endblock %}
{% block nav %}
    {{ parent() }}
{% endblock %}
{% block script %}
    {{ parent() }}
{% endblock %}


