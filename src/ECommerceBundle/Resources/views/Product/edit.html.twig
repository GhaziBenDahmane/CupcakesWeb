
    <div class="bd-example">
        <button type="button" class="btn btn-default" id="" data-toggle="modal" data-target="#exampleModal{{ product.id }}" data-whatever="@getbootstrap"> <i class="fa fa-magic"> </i> </button>
        <div class="modal fade" id="exampleModal{{ product.id }}"  tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <br><br><br>
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="exampleModalLabel">Update Product</h4>
                    </div>
                    <div class="modal-body">

                        {{ form_start(edit_form) }}
                        <div class="form-group">
                            <label for="name">Name</label>
                            {{ form_widget(edit_form.name,{'attr':{'class':'form-control'}} ) }}

                        </div>

                        <div class="form-group">
                            <label for="type">Type</label>
                            {{ form_widget(edit_form.type,{'attr':{'class':'form-control'}} ) }}
                        </div>

                        <div class="form-group">
                            <label for="price"> Price</label>
                            {{ form_widget(edit_form.price,{'attr':{'class':'form-control'}} ) }}
                        </div>
                        <div class="form-group">
                            <label for="photo"> Photo</label>
                            {{ form_widget(edit_form.photo,{'attr':{'class':'form-control'}} ) }}
                        </div>
                        <div class="form-group">
                            <label for="promotion"> Promotion</label>
                            {{ form_widget(edit_form.promotion,{'attr':{'class':'form-select'}} ) }}
                        </div>
                        <div class="form-group">
                            <label for="description"> Description</label>
                            {{ form_widget(edit_form.description,{'attr':{'class':'form-control'}} ) }}
                        </div>

                    </div>

                    <div class="modal-footer">
                        <table border="0" align="right"><tr>

                                <td>
                                {{ form_row(edit_form.submit,{'attr':{'class':'btn btn-primary'}}) }}

                            </td>
                            <td>
                                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="ajout()">Cancel</button>
                            </td>
                            </tr>
                        </table>

                    </div>
                    {{ form_rest(edit_form) }}
                    {{ form_end(edit_form) }}

                </div>
            </div>
        </div>
    </div>


