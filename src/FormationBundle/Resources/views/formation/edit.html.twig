{% extends 'layoutAdmin.html.twig' %}
{% block header %}
    {{ parent() }}
{% endblock %}
{% block menu %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <div class="modal-body">

        {{ form_start(form) }}
        <div class="form-group">
            <label for="nom">Nom</label>
            {{ form_widget(form.nom,{'attr':{'class':'form-control'}} ) }}

        </div>

        <div class="form-group">
            <label for="video">Video</label>
            {{ form_widget(form.video,{'attr':{'class':'form-control'}} ) }}
        </div>

        <div class="form-group">
            <label for="startDateFormation">startDateFormation</label>
            {{ form_widget(form.startDateFormation,{'attr':{'class':'form-control'}} ) }}
        </div>
        <div class="form-group">
            <label for="endDateFormation">endDateFormation</label>
            {{ form_widget(form.endDateFormation,{'attr':{'class':'form-control'}} ) }}
        </div>
        <div class="form-group">
            <label for="users"> Users</label>
            {{ form_widget(form.users,{'attr':{'class':'form-select'}} ) }}
        </div>

        <div class="form-group">
            <label for="users"> Status</label>
            {{ form_widget(form.status,{'attr':{'class':'form-select'}} ) }}
        </div>


    </div>

    <div class="modal-footer">
        <table border="0" align="right"><tr>

                <td>
                    {{ form_row(form.submit,{'attr':{'class':'btn btn-primary'}}) }}
                    {{ form_rest(form) }}
                    {{ form_end(form) }}

                </td>
                <td>
                    <button type="button" class="btn btn-default" data-dismiss="modal" >Cancel</button>
                </td>
            </tr>
        </table>
    </div>
{% endblock %}
{% block nav %}
    {{ parent() }}
{% endblock %}
{% block script %}
    {{ parent() }}
{% endblock %}


